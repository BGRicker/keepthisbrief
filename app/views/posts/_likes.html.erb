<% if user_signed_in? && current_user.likes?(@post) %>
  <%= link_to "Unlike", post_likes_path(@post), method: :delete, remote: true %>
<% else %>
  <%= link_to "Like", post_likes_path(@post), method: :post, remote: true %> <!-- allows JS response -->
<% end %>

<%= @post.likes.count %>

<%= @post.likes.each do |like| %>
<%= image_tag like.user.avatar_url, width: 20 %><br>

<% end %>

<!-- calling inspect on like when retrieving like.user.avatar_url -->
